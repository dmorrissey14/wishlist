<h1>lists#list_items</h1>
<p>Find me in app/views/lsits/list_items.html.erb</p>

  <ul class="nav navbar-nav navbar-right">
    <input type="button" onclick="location.href='createitem';" value="Add New Item" />
  </ul>
<div class="col-md-8">
  <% if @items.rows.any? %>
    <h3><%= @list.name %> Items</h3>
    <% @items.rows.each do |f|%>
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <div class="row">
              <p style="float: left;">
                <div class="thumbnail">
                  <img alt="Bootstrap Thumbnail Second" src= "<%= f[4] %>" />
                <div class="caption">
              </p>
              <p style="float: right;">
                <h3>
                  <%= f[2] %>
                </h3>
                <p>
                  <%= f[3] %>
                </p>
                <p>
                  Quantity: <%= f[5] %>
                </p>
                <p>
                <% if f[6]==1 %>
                  Purchased: Yes
                <% else %>
                  Purchased: No
                <% end %>
                </p>
                <p>
                  <a class="btn btn-primary" href="#">Modify</a> <a class="btn btn-primary" href="destroyitem?id=<%=f[0]%>&list_id=<%=f[1]%>">Delete</a>
                </p>
              </p>
              
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <% else %>
      <h3> No Items in List :( </h3>
  <% end %>
</div>

  

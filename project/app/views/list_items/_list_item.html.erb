<div class="row">
    <div class="col-md-12">
          <p style="float:right;">
            <div class="thumbnail">
              <% unless list_item.site_link.blank? %>
                <!-- This requires that the site_link property is set to an image URL, rather than a page. -->
                  <img alt="Bootstrap Thumbnail Second" src= "<%= list_item.site_link %>" />
              <% end %>
            </div>
            <div class="caption">
          </p>
          <p style="float:right;">
            <h3>
              <%= list_item.description %>
            </h3>
            <p>
              <%= list_item.comments %>
            </p>
            <p>
              Quantity: <%= list_item.quantity %>
            </p>
            <p>
            <% if list_item.purchased? %>
              Purchased: Yes
            <% else %>
              Purchased: No
            <% end %>
            </p>
            <p>
              <a class="btn btn-primary" href="#">Modify</a> <a class="btn btn-primary" href="destroyitem?id=<%=list_item.id%>&list_id=<%=list_item.list.id%>">Delete</a>
            </p>
          </p>
                
        </div>
    </div>
  </div>
  <hr>
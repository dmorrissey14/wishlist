<div class="row list-item item-hide">
  <div class="col-md-12">
    <div class="caption">
      <p style="float:right;">
        <h3>
          <%= list_item.description %>
        </h3>
        <p style="float:right;">
          <% unless list_item.site_link.blank? %>
            <div class="thumbnail">
              <!-- This requires that the site_link property is set to an image URL, rather than a page. -->
                <img alt="Bootstrap Thumbnail Second" src= "<%= list_item.site_link %>" />
            </div>
          <% end %>
        </p>
        <p>
          <%= list_item.comments %>
        </p>
        <p>
          Quantity: <%= list_item.quantity %>
        </p>
        <p>
        <% if list_item.purchased? && viewable?(list_item) %>
          Purchased: Yes
        <% else %>
          Purchased: No
        <% end %>
        </p>
        <p>
          <%= button_to  "Delete",  {controller: 'list_items', :action => 'destroy', id: list_item.id}, 
                                    {:method => :delete, :confirm => 'Are you sure?', :remote => true, class: "btn btn-primary"} %>
        </p>
      </p>
    </div>
  </div>
</div>
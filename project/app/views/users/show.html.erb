<div class="bg">

  <div class="user-header container-fluid">
    <div class="row">
      <div class="col-md-12">
          <h2 class="username"><%= @user.first_name %> <%= @user.last_name %>'s Lists</h2>
          <hr>
      </div>
      <div class="col-md-10 list-shell">
        <% if flash[:notice] %>
          <div class="alert alert-danger"><strong>Error: </strong><%= flash[:notice] %></div>
        <% end %>
        <% if flash[:success] %>
          <div class="alert alert-success"><strong>Success: </strong><%= flash[:success] %></div>
        <% end %>
        <% if flash[:warning] %>
          <div class="alert alert-warning"><strong>Success: </strong><%= flash[:warning] %></div>
        <% end %>
        <% if @user.lists.any? %>
            <%= render @user.lists %>
        <% end %>
      </div>
      <div class="col-md-2 list-options">
        <ul class>
          <a class="new-list btn btn-primary" href="/lists/new">Create New List</a>
        </ul>
      </div>
    </div>
  </div>
</div>
<!-- app/views/home/sign_up.html.erb -->
<div class="mainContent">
  <div class="grid">
    <h1 class="largeHeader">Create New Group:</h1>
  <div class="col-md-6 col-md-offset-3">
    <% if flash[:notice] %>
      <div class="alert alert-danger"><strong>Error: </strong><%= flash[:notice] %></div>
    <% end %>

    <%= form_for(Group.new) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>
      <%= f.submit "Create Group", class: "btn btn-primary" %>
    <% end %>

    </div><!-- end column 2 contact form -->
  </div><!-- end grid -->
</div><!-- end mainContent -->

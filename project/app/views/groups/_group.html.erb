	<div class="row">
		<div class="col-md-3">
				<h3 class="list-header"><%= group.name %></h3>
		</div>
		<div class="col-md-6 list-description" >
							<h4><%= group.description %></h4>
		</div>
		<div class="col-md-2">
						<%=  button_to 'Delete Group', {controller: 'groups', :id => group.id}, :method=>:delete, data: {confirm: "You sure?"} %>
		</div>
		<div class="col-md-3">
			<%= form_for group do |f| %>
				<%= f.text_field :user_id%>
				<%= f.hidden_field :id %>
  			<%= f.submit "Add User"%>
		<% end %> 
		</div>
	</div>

<% group.users.each do |g| %>
  <h2><%= g.first_name %> </h2>
<% end %>

<%# if group.users.any? %>
	<%#= render group.users %>
<%# end %>

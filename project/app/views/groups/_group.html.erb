	<div class="row">
		<div class="col-md-3">
				<h1 class="list-header"><%= group.name %></h3>
		</div>
		<div class="col-md-6 list-description" >
							<h4><%= group.description %></h4>
		</div>
		<div class="col-md-6">
			<h2>Members</h2>
			<% group.users.each do |g| %>
				<h4><%= g.first_name %> </h4>
			<% end %>
		</div>
		<div class="col-md-2">
						<%=  button_to 'Delete Group', {controller: 'groups', :id => group.id}, :method=>:delete, data: {confirm: "You sure?"} %>
		</div>
		<div class="col-md-3">
			<%= form_for group do |f| %>
				<%= f.text_field :user_id%>
				<%= f.hidden_field :id %>
  			<%= f.submit "Add User"%>
		<% end %> 
		</div>
		<div class="col-md-6">
			<h2>Lists</h2>
			<% group.lists.each do |g| %>
				<h4><%= g.name %> </h4>
			<% end %>
		</div>
		<div class="col-md-3">
			<%= form_for group do |f| %>
				<%= f.text_field :list_id%>
				<%= f.hidden_field :id %>
  			<%= f.submit "Add List"%>
		<% end %> 
		</div>
	</div>

<%# if group.users.any? %>
	<%#= render group.users %>
<%# end %>

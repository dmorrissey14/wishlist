<% provide(:title, 'The Wishlist') %>

<div class="container-fluid home-landing bg">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="center robot" id="title">THE WISHLIST</h1>
      <p class="center" id = "dot-separator">. . .</p>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="sales-pitch signika center center-block" id="width-1">Get ahead of the rush this year.</div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="sales-pitch signika center center-block" id="width-2">Organize your holidays.</div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
      <div class="sales-pitch signika center center-block" id="width-3">Eliminate the overlap with your friends.</div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12">
        <% if !logged_in? %>
          <%= button_to "Get Started", {controller: "sessions", action:"new"}, {form_class: 'button-form', class: 'btn btn-small start-button center-block signika', method: :get} %>
        <% else %>
          <%= button_to "Get Started", {controller: "users", action: "show"}, {form_class: 'button-form', class: 'btn btn-small start-button center-block signika', method: :get} %>
        <% end %>
    </div>
  </div>
</div>
